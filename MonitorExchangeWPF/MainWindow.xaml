<Window x:Class="MonitorExchangeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Dashboard" Height="720" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
             
    </Window.Resources>
    
    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>                                   
            </Grid.ColumnDefinitions>

            <!-- Left Menu -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>                                   
                </Grid.RowDefinitions>

                <!-- Menu Icon -->
                <Button Margin="20 28 0 35" Style="{StaticResource topButton}" >
                    <Icon:PackIconMaterial Kind="Menu" Height="15" Width="15"/>
                </Button>

                <Border Grid.Row="1" Background="#623ed0" CornerRadius="0 50 0 30">
                    <DockPanel>
                        <!-- Menu Logo -->
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
                                DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush  ImageSource="/Images/Avatar.jpg"/>
                                </Ellipse.Fill>
                            </Ellipse>                            
                        </Border>

                        <!-- Menu Titles -->
                        <TextBlock Text="UA Invoug" Foreground="White" FontSize="22" FontWeight="SemiBold"
                            DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10"/>

                        <TextBlock Text="Kiev/Odessa, Ukraine" Foreground="White" FontSize="14" FontWeight="SemiBold"
                            DockPanel.Dock="Top" TextAlignment="Center"/>
                        
                        <!-- Menu Seprator -->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc"/>
                        
                        <!-- Menu Buttons -->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Name="btnDashboard" Style="{StaticResource menuButton}" Click="btnDashboard_Click"> 
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/> 
                                    <TextBlock Text="Dashboard"/>
                                </StackPanel> 
                             </Button>
                            <Button Name="btnImports"  Style="{StaticResource menuButton}" Click="btnImports_Click" >
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="import" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Imports"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="tag" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Offers"/>
                                </StackPanel>
                            </Button>                          
                            
                        </StackPanel>

                        <Button Style="{StaticResource menuButton}" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15 0 15 20" Click="Button_Click">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="CloseBoxOutline" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Close"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>                        
                
            </Grid>

            <!-- Main Section -->
            <Grid Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/> <!-- Search &  Parameters -->
                    <RowDefinition Height="auto"/> <!-- Page Title & Upload -->
                    <RowDefinition Height="*"/> <!-- Panel with data (DataGrid) -->
                    <RowDefinition Height="auto"/> <!-- ... -->
                </Grid.RowDefinitions>
                                
                

                <!-- Add Button -->
                <Button Grid.Row="0" Name="btnUpLoad"  Style="{StaticResource addButton}" Click="btnUpLoad_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0"/>
                        <TextBlock Text="Add files"/>
                    </StackPanel>
                </Button>

                
                
                <!-- Panels with data -->
                <Grid Grid.Row="2" Name="pagImports" Margin="0 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/> <!-- Tab Button -->
                        <RowDefinition Height="auto"/> <!-- Separator -->
                        <RowDefinition Height="*"/> <!-- Grid: Datagrid -->                     
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Tab Button -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 0">
                        <Button Name="btnFiles" Content="Files" Style="{StaticResource tabButton}" Click="btnFiles_Click"/>
                        <Button Name="btnProducts" Content="Products" Style="{StaticResource tabButton}" Click="btnProducts_Click"/>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Separator Grid.Row="1" Height="1"  Background="#dae2ea" Margin="0 0 0 0"/>

                    <!-- Imports | Files -->
                    <Grid Grid.Row="2" Name="ImportsFiles">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>  <!-- Description & Filtr -->
                            <RowDefinition Height="*"/>     <!-- Datagrid -->
                            <RowDefinition Height="auto"/>  <!-- Pagination Section -->
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        
                       
                        
                        <!-- Files Datagrid -->
                        
                        <DataGrid  Grid.Row="1" Style="{DynamicResource DataGridStyle1}"
                            CellStyle="{DynamicResource DataGridCellStyle1}" 
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                            RowStyle="{DynamicResource DataGridRowStyle1}"  Name="ImportsFilesDataGrid"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True"
                            VerticalAlignment="Stretch">
                       
                            
                            <DataGrid.Columns>

                                <DataGridTextColumn Header="Date" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Date}">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>                                                    
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="Date" 
                                                    VerticalAlignment="Center" 
                                                     Margin="0,0,5,5"/>

                                                <TextBox Grid.Row="1" Style="{StaticResource textboxFilter}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    Tag="Date"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                            
                                <DataGridTextColumn Header="GUID file" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding GUIDFile}">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="GUID file" 
                                                    VerticalAlignment="Center" 
                                                    Margin="0,0,5,5"/>

                                                <TextBox Grid.Row="1" Style="{StaticResource textboxFilter}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    Tag="filterGUIDfile"/>
                                                
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                            
                                <DataGridTextColumn Header="Item" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Item}">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="Item" 
                                                    VerticalAlignment="Center" 
                                                    Margin="0,0,5,5"/>

                                                <TextBox Grid.Row="1" Style="{StaticResource textboxFilter}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    Tag="filterItem"/>

                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="All In" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding AllIn}">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="All In" 
                                                    VerticalAlignment="Center" 
                                                    Margin="0,0,5,5"/>

                                                <TextBox Grid.Row="1" Style="{StaticResource textboxFilter}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    Tag="filterAllIn"/>

                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>

                                <DataGridCheckBoxColumn Header="Is upload" IsReadOnly="True" CanUserResize="False" Width="auto" ElementStyle="{StaticResource CheckBoxReadOnlyStyle}"  Binding="{Binding IsUpload}">
                                    <DataGridCheckBoxColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="Is Upload" 
                                                    VerticalAlignment="Top" 
                                                    Margin="0,4,0,5"/>

                                                <CheckBox Grid.Row="1" Tag="filterIsUpload" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Stretch"  Margin="0,10,0,10"/>

                                            </Grid>                                                                                      
                                        </DataTemplate>
                                    </DataGridCheckBoxColumn.HeaderTemplate>
                                </DataGridCheckBoxColumn>   
                                                      
                            </DataGrid.Columns>

                        </DataGrid>                       

                        <!-- Pagination Section -->
                        <Border Grid.Row="2" HorizontalAlignment="Right" BorderBrush="#dee4ec" BorderThickness="1"
                                CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
                            <StackPanel x:Name="PaginationPanelImports" Orientation="Horizontal"/>
                        </Border>
                    </Grid>

                    <!-- Imports | Products-->
                    <Grid Grid.Row="2" Name="ImportsProducts" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/> <!-- Description & Filtr -->
                            <RowDefinition Height="*"/>    <!-- Datagrid -->
                            <RowDefinition Height="auto"/> <!-- Pagination Section -->
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        

                        <!-- Datagrid -->
                        <DataGrid Grid.Row="1" Style="{DynamicResource DataGridStyle1}"
                            CellStyle="{DynamicResource DataGridCellStyle1}" 
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                            RowStyle="{DynamicResource DataGridRowStyle1}"  Name="ProductsDataGrid"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                            
                            

                            <DataGrid.Columns>
                                <!-- Column ID -->
                                <!--<DataGridTemplateColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="70">
                                 <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                <TextBlock Text="#" />
                                <TextBox Width="20" Style="{StaticResource textboxFilter}" Text="{Binding FilterId, UpdateSourceTrigger=PropertyChanged}" Margin="4 0 0 0"/>
                                </StackPanel>
                                </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                <TextBlock Text="{Binding Id}" />
                                </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>-->

                                <!-- <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Id}"/> -->
                                <DataGridTextColumn Header="GUIDFile" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding GUIDFile}"/>
                                <DataGridTextColumn Header="Code" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Code}"/>
                                <DataGridTextColumn Header="Artikul" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Artikul}"/>
                                <DataGridTextColumn Header="Name" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Size" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Size}"/>
                                <DataGridTextColumn Header="View" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding View}"/>
                                <DataGridTextColumn Header="Manufacturer" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Manufacturer}"/>
                                <DataGridTextColumn Header="Country" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Country}"/>
                                <DataGridTextColumn Header="Material" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Material}"/>
                                <DataGridTextColumn Header="Season" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Season}"/>
                                <DataGridTextColumn Header="Color" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Color}"/>
                                <DataGridTextColumn Header="Categoria" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Categoria}"/>
                                <DataGridTextColumn Header="Marke" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Marke}"/>
                                <DataGridTextColumn Header="Brend" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Brend}"/>
                                <DataGridTextColumn Header="Sex" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Sex}"/>
                               

                            </DataGrid.Columns>

                        </DataGrid>

                        <!-- Pagination Products Section -->
                        <Border Grid.Row="2" HorizontalAlignment="Right" BorderBrush="#dee4ec" BorderThickness="1"
                            CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
                            <StackPanel x:Name="PaginationPanelProducts" Orientation="Horizontal"/>
                        </Border>


                    </Grid>

                </Grid>

            </Grid>            
            
        </Grid>        
    </Border>
</Window>
